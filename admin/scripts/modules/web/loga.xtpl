<!-- begin:loga -->

<h2>Titulní strana</h2>

<!-- begin:sponzoriTitulka -->
<h3>Loga sponzorů na titulce</h3>
{FILE "./_loga/_csv_razeni.xtpl" uploadAction=upload_sponzor_titulka_razeni csvTyp=sponzor_titulka}
<div class="logos-container">
  <!-- begin:logo -->
  <div class="logo-item">
    <img src="{src}" alt="{nazev}" style="max-width: 120px; max-height: 60px;">
    <p><strong>{nazev}</strong></p>
    <p><a href="{url}" target="_blank">{url}</a></p>
    <div class="logo-actions">
      <form method="post" style="display: inline;">
        <input type="hidden" name="action" value="remove_sponzor_titulka">
        <input type="hidden" name="filename" value="{filename}">
        <button type="submit" class="btn-remove" onclick="return confirm('Opravdu chcete smazat logo {nazev}?')">
          Smazat
        </button>
      </form>
    </div>
  </div>
  <!-- end:logo -->
</div>
<form method="post" enctype="multipart/form-data" class="logo-upload">
  <input type="file" name="logo_file" required>
  <label>URL sponzora <input type="text" name="url" placeholder="URL sponzora"
                             pattern="^(https?:\/\/)?([a-zA-Z0-9\-]+\.)+[a-zA-Z]{2,}.*$" required></label> <input
    type="hidden" name="action" value="upload_sponzor_titulka">
  <button type="submit">Nahrát logo sponzora</button>
</form>
<hr>
<!-- end:sponzoriTitulka -->

