<style>
    .logos-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin: 20px 0;
        background-color: rgba(215, 246, 170, 0.24);
    }

    .logo-item {
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 5px;
        text-align: center;
        min-width: 150px;
    }

    .logo-item img {
        display: block;
        margin: 0 auto 10px;
    }

    .logo-item p {
        margin: 5px 0;
        font-size: 12px;
    }

    .logo-sorting {
        padding: 0.5em 1em;
        background-color: rgba(246, 212, 189, 0.27);
    }

    .logo-actions {
        margin-top: 10px;
    }

    .logo-upload {
        padding: 0.5em 1em;
        background-color: rgba(215, 246, 170, 0.47);
    }

    .btn-remove {
        padding: 5px 10px;
        margin: 2px;
        border: 1px solid #ddd;
        border-radius: 3px;
        cursor: pointer;
        font-size: 12px;
        background: #dc3545;
        color: white;
    }

    .btn-remove:hover {
        background: #c82333;
    }
