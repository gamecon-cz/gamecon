          <span class="hinted">
            <input name="prodej[kusu]" style="border: none; margin: 0; padding: 0" type="number" step="1" value="1"
                   size="2" min="1" max="99" required>
            <span class="hint" style="white-space: nowrap; width: auto">Počet kusů</span>
          </span>
        </td>
        <td>
          <select name="prodej[id_predmetu]" id="predmet" required>
            {predmety}
          </select>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <input type="submit" name="prodej[odeslano]" value="Prodat">
        </td>
      </tr>
    </table>
  </form>
  <script>
    if ("{id}") $('[name="prodej[id_uzivatele]"]').attr('disabled', true)
    $('form').last().on('submit', function () {
      if ($(this).find('[name="prodej[id_predmetu]"]').val() == 0) {
        alert('vyber předmět')
        return false
      }
      if ($(this).find('[name="prodej[id_uzivatele]"]').val() == '')
        return confirm('Prodat tento předmět anonymně bez uvedení uživatele?')
    })
  </script>
