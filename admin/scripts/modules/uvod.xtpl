<!-- begin:udaje -->
<div class="aBox grid">
  <h3>Osobní údaje</h3>
  Pro úpravu klikni na údaj
  <form method="post" class="udaje" id="osobni_udaje">
    <table>
      <!-- begin:udaj -->
      <tr>
        <td style="width:80px">
          <!-- begin:nazevSPopiskem -->
          <span class="hinted">{nazev}:<span class="hint">{popisek}</span></span>
          <!-- end:nazevSPopiskem -->
          <!-- begin:nazevBezPopisku -->
          {nazev}:
          <!-- end:nazevBezPopisku -->
        </td>
        <td style="padding:0">
          <div id="editace_udaju_uzivatele_trigger"
               onclick="$('.udaje .label').hide(); $('.udaje .input').show().find('input, textarea').first().focus()"
               style="width: 100%; cursor: pointer;" class="label">
            {zobrazenaHodnota} &nbsp;
            <!-- begin:chybi -->
            <img src="files/design/error-s.png" style="margin-bottom:-2px">
            požádej o doplnění
            <!-- end:chybi -->
          </div>

          <table class="cista input" style="width:100%;display:none;">
            <tr>
              <!-- begin:input -->
              <td><input type="text" name="udaj[{sloupec}]" value="{vstupniHodnota}" style="margin-left: -3px;"
                         id="udaj_{sloupec}"></td>
              <td><input type="submit" name="zmenitUdaj" value="uložit"></td>
              <!-- end:input -->
              <!-- begin:checkbox -->
              <td><input type="checkbox" name="udaj[{sloupec}]" value="{vstupniHodnota}" {checked} {disabled}
                         style="margin-left: -3px;" id="udaj_{sloupec}"></td>
              <td><input type="submit" name="zmenitUdaj" value="uložit"></td>
              <!-- end:checkbox -->
              <!-- begin:select -->
              <td>
                <select name="udaj[{sloupec}]" style="margin-left: -3px; width: 15.3em"">
                <!-- begin:option -->
                <option value="{optionValue}" {optionSelected}>{optionText}</option>
                <!-- end:option -->
                </select>
              </td>
              <td><input type="submit" name="zmenitUdaj" value="uložit"></td>
              <!-- end:select -->
              <!-- begin:text -->
              <td colspan="2">
                <textarea id="udaj_{sloupec}" name="udaj[{sloupec}]" style="margin-left: -3px; margin-top: -1px">{vstupniHodnota}</textarea>
              </td>
              <td><input type="submit" name="zmenitUdaj" value="uložit"></td>
              <!-- end:text -->
            </tr>
          </table>
        </td>
      </tr>
      <!-- end:udaj -->
    </table>
    <script>
      let potebujePotvrzeni = Boolean({potrebujePotvrzeni})
      const osobniUdajeForm = $('#osobni_udaje')
      const potvrzeniZakonnehoZastupce = osobniUdajeForm.find('input[name="udaj[potvrzeni_zakonneho_zastupce]"]')
      osobniUdajeForm.submit(function () {
        if (potebujePotvrzeni && !potvrzeniZakonnehoZastupce.prop('checked')) {
          return confirm('{potrebujePotvrzeniZprava}')
        }
      })
    </script>
  </form>
  <script src="files/jquery.autosize-1.18.13.js"></script>
  <script>
    $('textarea').last().focus(function () {
      $(this).css('width', '98%').autosize()
    })
  </script>
</div>
<!-- end:udaje -->


<div class="aBox grid">
