<!-- begin:slevy -->

    Jsem <b>student</b> a mám nárok na slevu <b>20%</b>:
    <input type="checkbox" name="{postname}[student]" value="1" {checked}>
    <input type="text" id="skola" placeholder="škola" name="{postname}[skola]" value="{skola}">
    <script>
      $("#skola").autocomplete({source:[
        {skoly}
      ]});
    </script>

    <!-- begin:vcas -->
    <br>Pokud <b>zaplatím do {slevaDo}
