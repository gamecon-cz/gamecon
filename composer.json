{
    "name": "gamecon-cz/gamecon",
    "type": "project",
    "description": "Počítačem řízené zázemí pro Největší festival nepočítačových her",
    "autoload": {
        "psr-4": {
            "Gamecon\\": "model",
            "Gamecon\\Admin\\Modules\\Aktivity\\GoogleSheets\\": "admin/scripts/modules/aktivity/_GoogleSheets",
            "Gamecon\\Admin\\Modules\\Aktivity\\Export\\": "admin/scripts/modules/aktivity/_Export",
            "Gamecon\\Admin\\Modules\\Aktivity\\Import\\": "admin/scripts/modules/aktivity/_Import",
            "App\\": "symfony/src/"
        }
    },
    "require": {
        "php": ">=8.2",
        "ext-bcmath": "*",
        "ext-curl": "*",
        "ext-exif": "*",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-iconv": "*",
        "ext-imagick": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "ext-sqlite3": "*",
        "ext-xml": "*",
        "ext-zip": "*",
        "defuse/php-encryption": "^2.1",
        "dg/mysql-dump": "^1.5",
        "doctrine/dbal": "^3.7",
        "doctrine/doctrine-bundle": "^2.11",
        "doctrine/orm": "^2.17",
        "egulias/email-validator": "^4.0",
        "endroid/qr-code": "^4.2",
        "firebase/php-jwt": "^6.11",
        "google/apiclient": "^2.4",
        "granam/remove-diacritics": "^1.0",
        "granam/string": "^4.2",
        "ifsnop/mysqldump-php": "^2.10",
        "michelf/php-markdown": "~1.4",
        "openspout/openspout": "^4.0",
        "rikudou/czqrpayment": "^5.0",
        "roderik/pwgen-php": "^0.1.8",
        "setasign/tfpdf": "^1.25",
        "smhg/sepa-qr-data": "^1.2",
        "symfony/config": "^7.3",
        "symfony/console": "^7.3",
        "symfony/dependency-injection": "^7.3",
        "symfony/dotenv": "^7.3",
        "symfony/filesystem": "^7.3",
        "symfony/flex": "^2.8",
        "symfony/framework-bundle": "^7.3",
        "symfony/http-foundation": "^7.3",
        "symfony/http-kernel": "^7.3",
        "symfony/mailer": "^7.3",
        "symfony/mime": "^7.3",
        "symfony/routing": "^7.3",
        "symfony/yaml": "^7.3",
        "tracy/tracy": "~2.4",
        "wikimedia/less.php": "^3.0"
    },
    "require-dev": {
        "dg/ftp-deployment": "~3.3",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-doctrine": "^2.0",
        "phpunit/phpunit": "^10.0",
        "roave/security-advisories": "dev-latest",
        "symfony/maker-bundle": "^1.64",
        "symfony/process": "^7.3",
        "symplify/easy-coding-standard": "^12.0",
        "symplify/vendor-patches": "^11.1",
        "zenstruck/foundry": "^2.7"
    },
    "autoload-dev": {
        "psr-4": {
            "Gamecon\\Tests\\": "tests",
            "Godric\\DbMigrations\\": "migrace/pomocne/db-migrations/src"
        }
    },
    "extra": {
        "patches": {
            "dg/mysql-dump": [
                "patches/dg-mysql-dump-src-mysqlimport-php.patch"
            ]
        },
        "google/apiclient-services": [
            "Drive",
            "Sheets"
        ]
    },
    "scripts": {
        "pre-autoload-dump": "Google\\Task\\Composer::cleanup",
        "post-update-cmd": "@after-change",
        "post-install-cmd": "@after-change",
        "after-change": [
            "@clear-templates-cache"
        ],
        "clear-templates-cache": "php -r 'array_map(\"unlink\", @glob(\"cache/private/xtpl/*.php\") ?: []);'",
        "clear-symfony-cache": "rm -fr symfony/var/cache",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "symfony/flex": true
        }
    }
}
