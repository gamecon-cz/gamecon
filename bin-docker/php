#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$DIR")"
PROJECT_DIR="$(basename "$PROJECT_ROOT")"

source "${DIR}/_tty.sh"

if [ "$(docker compose ps web | grep --count Up)" -gt 0 ]; then
	docker_compose_exec \
    --workdir="/var/www/html/${PROJECT_DIR}" \
		--user=www-data \
		web php "$@"
else
    # without --entrypoint=/usr/local/bin/php as that may break loading of php.ini
	docker_compose_run \
		--entrypoint=php \
    --workdir="/var/www/html/${PROJECT_DIR}" \
		--user=www-data \
		web "$@"
fi
